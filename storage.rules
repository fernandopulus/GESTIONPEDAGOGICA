rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Intranet: imágenes y videos
    match /intranet/images/{fileName=**} {
      allow read: if true; // imágenes pueden ser públicas
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024 // 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    match /intranet/videos/{fileName=**} {
      allow read: if request.auth != null; // videos internos, lectura autenticada
      allow write: if request.auth != null
                   && request.resource.size < 200 * 1024 * 1024 // 200MB
                   && request.resource.contentType.matches('video/.*');
    }

    // videos_opr/{acompId}/{cicloId}/{file...}
    match /videos_opr/{acompId}/{cicloId}/{filePath=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 500 * 1024 * 1024
                   && request.resource.contentType.matches('video/.*');
    }

  // Carpeta pública opcional: lectura abierta, escritura autenticada y limitada
    match /public/{fileName=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024;
    }

    // Archivos de Multicopias: permitir a usuarios autenticados subir material (PDF e imágenes)
    match /multicopias/{filePath=**} {
      allow read: if request.auth != null; // lectura autenticada (los enlaces firmados igualmente funcionarán)
      allow write: if request.auth != null
                   && request.resource.size < 25 * 1024 * 1024 // hasta 25MB
                   && (
                        request.resource.contentType.matches('application/pdf') ||
                        request.resource.contentType.matches('image/.*')
                      );
    }

  // Denegar cualquier otra ruta no contemplada explícitamente
    match /{path=**} {
      allow read, write: if false;
    }
  }
}

// Después de modificar, desplegar con:
// firebase deploy --only storage
