rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // videos_opr/{acompId}/{cicloId}/{file...}
    match /videos_opr/{acompId}/{cicloId}/{filePath=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 500 * 1024 * 1024
                   && request.resource.contentType.matches('video/.*');
    }

  // Carpeta pública opcional: lectura abierta, escritura autenticada y limitada
    match /public/{fileName=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024;
    }

  // Denegar cualquier otra ruta no contemplada explícitamente
    match /{path=**} {
      allow read, write: if false;
    }
  }
}

// Después de modificar, desplegar con:
// firebase deploy --only storage
